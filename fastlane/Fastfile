fastlane_version "1.109.0"

before_all do
	
end

platform :ios do
	lane :test do
		scan(
			scheme: "AlgoliaSearch iOS",
			configuration: "Release",
			clean: true,
			xcargs: prepare_api_keys
		)
	end
end

platform :mac do
	lane :test do
		scan(
			scheme: "AlgoliaSearch OSX",
			configuration: "Release",
			clean: true,
			xcargs: prepare_api_keys
		)
	end
end

platform :tv do
	lane :test do
		scan(
			scheme: "AlgoliaSearch tvOS",
			configuration: "Release",
			clean: true,
