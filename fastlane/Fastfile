fastlane_version "1.109.0"

import '../config/Fastfile'

before_all do
	
end

platform :ios do
	lane :test do
		scan(
			scheme: "AlgoliaSearch iOS",
			configuration: "Release",
			clean: true,
			xcargs: prepare_api_keys
		)
		code_coverage
		run_swift_lint
	end
end

